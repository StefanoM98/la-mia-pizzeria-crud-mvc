@{
    Layout = "_Layout";
}
@model List<Pizza>

@if (Model.Count() == 0)
{
    <h2>La Pizzeria è ancora in fase di apertura, le pizze ancora dobbiamo deciderle. Seguite la nostra pagina Instagram per rimanere connessi</h2>
}
else
{
    <div class="container">
        <div class="row">
            <div class="col-12">

                <h1 class="my-5">Lista delle pizze</h1>


                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Immagine</th>
                            <th scope="col">Titolo</th>
                            <th scope="col">Descrizione</th>
                            <th scope="col">Prezzo</th>
                            <th scope="col">Azioni</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Pizza pizza in Model)
                        {
                            <tr>
                                <th scope="row">@pizza.Id</th>
                                <td><img class="w-75" src="@pizza.Pathimg" alt="@pizza.Name" /></td>
                                <td>@pizza.Name</td>
                                <td>@pizza.Description</td>
                                <td>@pizza.Price</td>
                                <td>
                                    <a class="btn btn-primary" href="@Url.Action("Details", "Pizza", new{id=pizza.Id})">Dettagli della pizza</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>

            </div>
        </div>
    </div>
}






